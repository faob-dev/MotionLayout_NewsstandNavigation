<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.motion.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/motion_container"
        android:background="#173F5F"
        app:layoutDescription="@xml/motion_scene">

    <View
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/v1"
            android:background="#55acee"
            app:layout_constraintBottom_toTopOf="@+id/v2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>
    <View
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/v2"
            android:background="#3CAEA3"
            app:layout_constraintBottom_toTopOf="@+id/v3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>
    <View
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/v3"
            android:background="#f2b632"
            app:layout_constraintBottom_toTopOf="@+id/v4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>
    <View
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/v4"
            android:background="#ED553B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:id="@+id/t1"
            android:text="HIGHLIGHTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/v1"
            app:layout_constraintBottom_toBottomOf="@+id/v1"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintEnd_toStartOf="@+id/v1"
            android:fontFamily="@font/open_sans_bold"/>
    <TextView
            android:id="@+id/t2"
            android:text="SCIENCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/v2"
            app:layout_constraintTop_toTopOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v2"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            android:fontFamily="@font/open_sans_bold"/>
    <TextView
            android:id="@+id/t3"
            android:text="GAMING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/v3"
            app:layout_constraintBottom_toBottomOf="@+id/v3"
            app:layout_constraintStart_toStartOf="@+id/v3"
            app:layout_constraintEnd_toStartOf="@+id/v3"
            android:fontFamily="@font/open_sans_bold"/>
    <TextView
            android:id="@+id/t4"
            android:text="MOVIES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/v4"
            app:layout_constraintStart_toStartOf="@+id/v4"
            app:layout_constraintEnd_toStartOf="@+id/v4"
            app:layout_constraintBottom_toBottomOf="@+id/v4"
            android:fontFamily="@font/open_sans_bold"/>

</android.support.constraint.motion.MotionLayout>